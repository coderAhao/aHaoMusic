/* components/song-list/index.wxss */
.container {
  width: 100vw;
  height: 400rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  color: #fff;
  /* padding: 30rpx; */
  /* box-sizing: border-box; */
}
 .bg-img {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
 .bg-cover{
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}
.brief-introduction {
  margin: 40rpx auto;
  display: flex;
}
.brief-introduction .cover {
  display: inline-block;
  width: 230rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}
.brief-introduction .desc {
  width: 400rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.desc .title {
  font-size: 34rpx;
}
.desc .author .avatar {
  display: inline-block;
  width: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 20rpx;
}
.author .author-name {
  font-size: 24rpx;
}
.introduction {
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.collection-share {
  display: flex;
  justify-content: space-around;
  margin: 10rpx 0;
}
.collection-share .icon {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 15rpx;
}
.share .text {
  font-size: 30rpx;
}
/* 歌曲列表 */
.song-detail-name {
  font-weight: 700;
  margin: 30rpx 0 30rpx 30rpx;
}
